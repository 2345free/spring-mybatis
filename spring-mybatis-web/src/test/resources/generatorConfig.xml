<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>

	<classPathEntry
		location="D:\develop\mvn\repository\mysql\mysql-connector-java\5.1.41\mysql-connector-java-5.1.41.jar" />
		
	<context id="MySQLTables">
	
		<commentGenerator>  
	        <!-- 是否去除自动生成的注释 -->  
	        <property name="suppressAllComments" value="true" />  
	        <!-- <property name="dateFormat" value="yyyy-MM-dd HH:mm:ss" /> -->
	        <property name="suppressDate" value="true" />
	        <!-- 添加数据库中的注释 -->  
	       <!--  <property name="addRemarkComments" value="true" /> -->
        </commentGenerator>  
	
        <!--数据库连接的信息：驱动类、连接地址、用户名、密码 -->  
		<jdbcConnection
			connectionURL="jdbc:mysql://localhost:3306/test?useUnicode=true&amp;characterEncoding=UTF-8"
			driverClass="com.mysql.jdbc.Driver" password="root" userId="root" />
			
		<javaModelGenerator targetPackage="com.example.simples.sm.entity"
			targetProject="spring-mybatis-entity" />
			
		<sqlMapGenerator targetPackage="com.example.simples.sm.sqlmap"
			targetProject="spring-mybatis-dao" />
		
		<javaClientGenerator targetPackage="com.example.simples.sm.dao"
			targetProject="spring-mybatis-dao" type="XMLMAPPER" />
			
		<table schema="test" tableName="t_user" domainObjectName="User" mapperName="UserDao"
			enableCountByExample="false" 
			enableUpdateByExample="false" 
			enableDeleteByExample="false"
    		enableSelectByExample="false" 
    		selectByExampleQueryId="false" >
			<!-- 
			<generatedKey column="id" sqlStatement="MySql"/>
			<columnOverride column="user_name" property="userName" />
    		<property name="useActualColumnNames" value="true"/>
    		 -->
		</table>
		
	</context>
	
</generatorConfiguration>